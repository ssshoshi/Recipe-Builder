<div class="nested-fields input-group mb-3">
    <div class="input-group-prepend">
        <%= f.number_field :sequence, label: false, :class => "form-control", :required => true, min: 1%>
    </div>
    <%= f.text_field :description, label: false, :class => "form-control", :required => true %>
    <div class="input-group-append">
        <%= link_to_remove_association "Remove", f, :class => "stepRemove btn btn-outline-secondary" %>
    </div>   
</div>