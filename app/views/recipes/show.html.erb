
<div class="container">
  <h1><%= @recipe.title %></h1>
  <hr>
  <div class="container info">
    <div class="row">
      <div class="col m-1"><strong>Prep</strong></div>
      <div class="col m-1"><strong>Cook</strong></div>
      <div class="col m-1"><strong>Ready in</strong></div>
      <div class="col m-1"><strong>Servings</strong></div>
      <div class="col m-1"><strong>Origin</strong></div>
      <div class="w-100"></div>
      <div class="col m-1"><%= @recipe.prep_time %>m</div>
      <div class="col m-1"><%= @recipe.cook_time %>m</div>
      <div class="col m-1"><%= total_time(@recipe) %>m</div>
      <div class="col m-1"><%= @recipe.servings %></div>
      <div class="col m-1"><%= originOrNo(@recipe) %></div>
    </div>
  </div>
  <hr>
  <div class="container">
    <h4>Ingredients</h4>
    <div class="container">
    <ul class="list-group d-flex flex-row flex-wrap">
      <% @recipe.ingredients.each do |ingredient| %>
            <li class="list-group-item w-50 border-0 text-center"><%= ingredient.item %></li>
      <% end %>
    </ul>
    </div>
  </div>
  <hr>
  <div class="container">
    <h4>Directions</h4>
    <ol>
      <% @recipe.steps.order("sequence asc").each do |step| %>
          <li class="step"><%= step.description %></li>
      <% end %>
    </ol>
  </div>
  <hr>
  <div class="btn-toolbar">
    <%= link_to "Edit", edit_recipe_path(@recipe), {:class => "link btn btn-warning mx-2"} %>
    <%= link_to "Delete", recipe_path(@recipe), method: :delete, class: "btn btn-danger mx-2" %>
  </div>
</div>